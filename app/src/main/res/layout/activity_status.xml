<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainChat.MainActivity">
  <include
      android:id="@+id/status_toolbar"
      layout="@layout/action_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/text1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/status_toolbar"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="20dp"
      android:text="Currently set to"
      android:textColor="@color/colorAccent"
      android:textSize="14sp"
      android:textStyle="normal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/text2"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@+id/text1"
      android:layout_marginTop="20dp"
      android:background="@drawable/custon_ripple"
      android:ems="10"
      android:gravity="clip_vertical"
      android:paddingStart="20dp"
      android:paddingTop="8dp"
      android:paddingEnd="20dp"
      android:text="@string/default_status"
      android:textColor="#4d4d4d"
      android:textSize="16sp" />

  <View
      android:id="@+id/view1"
      android:layout_width="381dp"
      android:layout_height="0.5dp"
      android:layout_below="@+id/text2"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="6dp"
      android:layout_marginEnd="20dp"
      android:background="@color/colorAccent"
      android:paddingStart="20dp" />

  <TextView
      android:id="@+id/text3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/text2"
      android:layout_marginStart="15dp"
      android:layout_marginTop="30dp"
      android:text="@string/choose_status"
      android:textColor="@color/colorAccent"
      android:textSize="14sp"
      android:textStyle="normal" />

  <ListView
      android:id="@+id/listview1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/text3"
      android:layout_marginTop="10dp"
      android:divider="@null" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="18dp"
      android:layout_height="18dp"
      android:layout_alignTop="@+id/text2"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="13dp"
      android:layout_marginEnd="13dp"
      app:srcCompat="@drawable/ic_edit" />


</RelativeLayout>